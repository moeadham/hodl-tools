{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/sol/balance/",
        "function": "solBalance"
      },
      {
        "source": "/metrics/",
        "function": "getMetrics"
      },
      {
        "source": "/admin/addBalanceAddresses",
        "function": "addBalanceAddresses"
      },
      {
        "source": "/admin/addValidators",
        "function": "addValidators"
      },
      {
        "source": "/admin/addBtcBalance",
        "function": "addBtcBalance"
      },
      {
        "source": "/admin/populateCache",
        "function": "populateCache"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5005
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "database": {
      "port": 9000
    }
  }
}
